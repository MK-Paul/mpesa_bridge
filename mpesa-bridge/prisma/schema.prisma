// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  role      Role       @default(USER)
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  projects Project[]
  apiCalls ApiCall[]

  @@map("users")
}

enum Environment {
  LIVE
  SANDBOX
}

model Project {
  id          String   @id @default(uuid())
  name        String
  publicKey   String   @unique @map("public_key")
  secretKey   String   @unique @map("secret_key")
  testPublicKey String? @unique @map("test_public_key")
  testSecretKey String? @unique @map("test_secret_key")
  
  // M-Pesa Production Credentials
  shortCode     String?  @map("short_code")
  consumerKey   String?  @map("consumer_key")
  consumerSecret String? @map("consumer_secret")
  passkey       String?  @map("passkey")

  callbackUrl String?  @map("callback_url")
  webhookUrl  String?  @map("webhook_url")
  webhookSecret String? @map("webhook_secret")
  userId      String?  @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user         User? @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("projects")
}

model Transaction {
  id                String   @id @default(uuid())
  projectId         String   @map("project_id")
  merchantRequestId String?  @unique @map("merchant_request_id")
  checkoutRequestId String?  @unique @map("checkout_request_id")
  amount            Float
  phoneNumber       String   @map("phone_number")
  status            String   @default("PENDING")
  environment       Environment @default(LIVE)
  source            String   @default("DIRECT_API")
  metadata          String?
  mpesaReceipt      String?  @map("mpesa_receipt")
  failureReason     String?  @map("failure_reason")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id])

  @@map("transactions")
}

model ApiCall {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String
  method    String
  status    Int      @default(200)
  duration  Int      @default(0)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
